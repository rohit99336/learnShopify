<!-- sections/home-hero.liquid -->

{% stylesheet %}
  .hero-section {
    background: #e8fbe9;
    padding: 60px 0;
  }
  .hero-heading {
    font-weight: 700;
    font-size: 2.2rem;
  }
  .hero-subtext {
    font-size: 16px;
    color: #555;
  }
  .hero-image img {
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
{% endstylesheet %}

<section class="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <!-- Left Text -->
      <div class="col-md-6 mb-4 mb-md-0 text-center text-md-start">
        <h1 class="hero-heading">
          {{ section.settings.main_heading | escape }}
        </h1>
        <p class="hero-subtext mt-3">
          {{ section.settings.sub_heading | escape }}
        </p>

        <!-- Buttons -->
        <div class="mt-4 d-flex justify-content-center justify-content-md-start gap-3 flex-wrap">
          {% if section.settings.button_1_label != blank %}
            <a href="{{ section.settings.button_1_link }}" class="btn btn-success px-4 py-2">
              {{ section.settings.button_1_label }}
            </a>
          {% endif %}
          {% if section.settings.button_2_label != blank %}
            <a href="{{ section.settings.button_2_link }}" class="btn btn-outline-success px-4 py-2">
              {{ section.settings.button_2_label }}
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Right Image -->
      <div class="col-md-6 hero-image text-center">
        {% if section.settings.hero_image %}
          {% assign img = section.settings.hero_image %}
          <img
            src="{{ img | image_url: width: 600 }}"
            width="{{ img.width }}"
            height="{{ img.height }}"
            alt="{{ section.settings.main_heading | escape }}"
            class="img-fluid"
          >
        {% else %}
          <img
            src="https://images.pexels.com/photos/5327585/pexels-photo-5327585.jpeg?auto=compress&cs=tinysrgb&w=600&h=600&fit=crop"
            width="600"
            height="600"
            alt="Default Hero"
            class="img-fluid"
          >
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Homepage Hero",
  "tag": "section",
  "class": "shopify-section",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Relieve Gas, Acidity & Constipation Naturally"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "100% Ayurvedic | Works from Day 1 | No Side Effects"
    },
    {
      "type": "text",
      "id": "button_1_label",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Primary Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_2_label",
      "label": "Secondary Button Text",
      "default": "Explore Products"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Secondary Button Link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Homepage Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
