<style>
  .top-bar {
    background-color: #21a956;
    color: white;
    font-size: 14px;
    padding: 6px 0;
    text-align: center;
  }
  .main-header {
    padding: 12px 0;
    border-bottom: 1px solid #eee;
  }
  .logo-text {
    font-weight: 700;
    font-size: 22px;
    color: #1d6b3c;
  }
  .nav-link {
    color: #06113C !important;
    font-weight: 500;
    margin: 0 8px;
  }
  .icon-link {
    font-size: 22px;
    color: #1d6b3c;
    margin-left: 15px;
  }
</style>

<!-- Top Offer Bar -->
{% if section.settings.top_bar_text != blank %}
  <div class="top-bar">
    {{ section.settings.top_bar_text }}
  </div>
{% endif %}

<!-- Main Header -->
<header class="main-header">
  <div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center">
      
      <!-- Left Logo -->
      <div class="d-flex align-items-center">
        <i class="ri-leaf-line" style="font-size: 24px; color: #1d6b3c;"></i>
        <span class="logo-text ms-2">{{ section.settings.logo_text }}</span>
      </div>

      <!-- Center Navigation -->
      <nav class="d-none d-md-block">
        <ul class="nav">
          {% for block in section.blocks %}
            {% if block.type == 'nav_item' %}
              <li class="nav-item">
                <a class="nav-link" href="{{ block.settings.url }}">{{ block.settings.label }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </nav>

      <!-- Right Icons -->
      <div class="d-flex align-items-center">
        {% if section.settings.show_chat_icon %}
          <a href="/pages/contact" class="icon-link"><i class="ri-message-3-line"></i></a>
        {% endif %}
        {% if section.settings.show_cart_icon %}
          <a href="/cart" class="icon-link"><i class="ri-shopping-cart-line"></i></a>
        {% endif %}
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header (Bootstrap 5)",
  "settings": [
    {
      "type": "text",
      "id": "top_bar_text",
      "label": "Top Bar Text",
      "default": "Free Shipping + COD Available | Extra 10% OFF on Prepaid Orders"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "Jeevani Herbals"
    },
    {
      "type": "checkbox",
      "id": "show_chat_icon",
      "label": "Show Chat Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart_icon",
      "label": "Show Cart Icon",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "nav_item",
      "name": "Navigation Item",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Home"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL",
          "default": "/"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Bootstrap Header",
      "blocks": [
        {
          "type": "nav_item",
          "settings": {
            "label": "Home",
            "url": "/"
          }
        },
        {
          "type": "nav_item",
          "settings": {
            "label": "Shop",
            "url": "/collections/all"
          }
        },
        {
          "type": "nav_item",
          "settings": {
            "label": "Combos",
            "url": "/collections/combos"
          }
        },
        {
          "type": "nav_item",
          "settings": {
            "label": "Gut Education",
            "url": "/pages/gut-education"
          }
        },
        {
          "type": "nav_item",
          "settings": {
            "label": "Track Order",
            "url": "/pages/track-order"
          }
        },
        {
          "type": "nav_item",
          "settings": {
            "label": "Contact",
            "url": "/pages/contact"
          }
        }
      ]
    }
  ]
}
{% endschema %}
